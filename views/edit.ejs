<% include ./partials/header%>
    <div class="container main"></div>
    
    <div class="ui raised segment container text">
        <h1 class="huge header">Edit <%= blog.title%></h1>
        <form class="ui form" action="/blogs/<%= blog._id%>?_method=PUT" method="POST">
            <div class="field">
                <label>Title</label>
                <input type="text" name="blog[title]" value= "<%= blog.title%>"></input>
            </div>
            
            <div class="field">
                <label>Image</label>
                <input type="text" name="blog[image]" value= "<%= blog.image%>"></input>
            </div>
            
            <div class="field">
                <label>Content</label>
                <input type="text" name="blog[body]" value= "<%= blog.body%>"></input>
            </div>  
            
            <input class="ui secondary big button" type="submit"></input>
        </form>
    </div>
<% include ./partials/footer%>